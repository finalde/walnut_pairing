[flake8]
max-line-length = 88
extend-ignore = E203, W503
# Enable additional checks
select = E,W,F,C,N
# Maximum complexity
max-complexity = 10
# Exclude patterns
exclude =
    .venv,
    __pycache__,
    build,
    dist,
    *.pyc,
    migrations,
    .git
# Per-file ignores
per-file-ignores =
    __init__.py:F401  # Allow unused imports in __init__.py
# Import order checking
import-order-style = google
