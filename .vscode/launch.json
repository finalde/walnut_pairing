{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug src.main (WSL)",
        "type": "python",
        "request": "launch",
  
        "module": "src.main",
        "cwd": "${workspaceFolder}",
  
        "console": "integratedTerminal",
        "justMyCode": true,
        "subProcess": true,
  
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
  
        "envFile": "${workspaceFolder}/.env"
      }
    ]
  }
  